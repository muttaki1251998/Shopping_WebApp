<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/home.css">  
    <link rel="stylesheet" href="stylesheets/product.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Shop</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <a class="navbar-brand" href="/">Node ShopApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% pages.forEach(function(page){ %>
              
              <% if(page.slug == "home"){ %>
                <li class="nav-item"><a href="/" class="nav-link"> <%= page.title %> </a></li>
              <% }else{ %>
                <li class="nav-item"><a href="/<%= page.slug %>" class="nav-link"> <%= page.title %> </a></li>
              <% } %>

            <% }) %>                      
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/cart/checkout" class="nav-link">My Cart (
                  <% if (typeof cart !== "undefined") { %>
                  <%= cart.length %>
                  <% } else {%>
                  0
                  <% } %>
              )</a>
          </li>                     
         
          <% if(user){ %>
            <li class="nav-item"><a href="/users/logout" class="nav-link">Logout</a></li>
          <% }else{ %>
            <li class="nav-item"><a href="/users/register" class="nav-link">Register</a></li>
            <li class="nav-item"><a href="/users/login" class="nav-link">Log In</a></li>
          <% } %>  
          
          <% if(user && user.admin == 1){ %>
            <li class="nav-item"><a href="/admin" class="nav-link">Admin Area</a></li> 
          <% } %>
        </ul>      
        </div>
      </nav>
    
      <div class="container">
          <%- messages('messages', locals) %>

        <div class="row">
          <div class="col-xs-12 col-md-3">
            <h3>Categories</h3>
            <ul class="list-groups">
                <li class="list-group-item"><a href="/products">All products </a></li>
              <% categories.forEach(function(cat){ %>
                  <li class="list-group-item"><a href="/products/<%= cat.slug %>"> <%= cat.title %> </a></li>
              <% }) %>
            </ul>
          </div>
          <div class="col-xs-12 col-md-1"></div>
          <div class="col-xs-12 col-md-8">

    
