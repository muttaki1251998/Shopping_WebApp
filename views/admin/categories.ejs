<table class = "table table-striped">
    <thead>
        <tr>
            <th>Category</th>
           
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(function(cat){ %>
            <tr>
                <td> <%= cat.title %> </td>                 
                       
                <td><a href = "/admin/category/delete-category/<%= cat._id %>">Delete</a></td>                         
            </tr>
        <%   }); %>
    </tbody>
</table>
