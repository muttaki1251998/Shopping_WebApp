<%- include('../_layout/adminHeader.ejs') %>
    

    <h2 class="page-title display-4">Categories</h2><br>
    <a href="/admin/category" class="btn btn-primary" style="border-radius: 0; font-family: 'Roboto Slab', serif;"  ">All Cateogories</a>
